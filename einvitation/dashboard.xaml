<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="einvitation.dashboard">
    
    <ContentPage.Content>
        <StackLayout Padding="5">
            <Button Text="Add Event" HorizontalOptions="FillAndExpand" 
                BackgroundColor="Orange" TextColor="Black" Clicked="ButtonClicked2"/>

            <ListView x:Name="EventList" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Delete" Clicked="DeleteEvent" IsDestructive="true" CommandParameter="{Binding .}"/>
                            </ViewCell.ContextActions>
                            <StackLayout Spacing="2">
                                
                                <Label Text="{Binding Title,StringFormat='Title:{0:F0}'}" FontSize="Small" FontAttributes="None"/>
                                <Label Text="{Binding Description,StringFormat='Description :{0:F0}'}" FontSize="Small" FontAttributes="None"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>




        </StackLayout>
    </ContentPage.Content>
</ContentPage>